<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>WELCOME TO STAYCALM</h1>
            <p>
                View our listings from all over the USA!!!
            </p>
            <p>
                <a class="btn btn-primary btn-large" href="./listings/new">
                    Add New listings</a
                >
            </p>
        </div>
    </header>

    <div class="container">
        <% lists.forEach(function(list){ %>

        <div class="row">
            <div class="col-md-5">
                <div class="thumbnail">
                    <img
                        class="img-responsive"
                        src="<%= list.image %>"
                        width="400"
                        height="300"
                        alt="<%= list.name%>"
                    />
                </div>
            </div>
            <div class="col-md-3">
                <div class="list-group">
                    <h2>
                        <%= list.houseType%> <br />
                        owned by
                        <strong><%= list.name%> <%= list.lastName%></strong>
                    </h2>
                    <p><strong>Description:</strong> <%= list.description %></p>
                    <h4>
                        <strong> Location:</strong> <%= list.address%> <%=
                        list.city%> <%= list.state%> <%= list.zip%>
                    </h4>

                    <h2>
                        $<%= list.price%> per day
                    </h2>

                    <p>
                        <a
                            class="btn btn-primary btn-large"
                            href="/listings/<%= list._id%>"
                        >
                            Read More</a
                        >
                    </p>
                </div>
            </div>
        </div>
        <hr />
        <% }); %>
    </div>

